[Unit]
Description=Neurobit API service (development)
After=network.target

[Service]
Type=simple
User=%i
WorkingDirectory=%h/neurobit_salon_v0.1
ExecStart=%h/neurobit_salon_v0.1/.venv/bin/python %h/neurobit_salon_v0.1/neurobit_api.py
Restart=on-failure

[Install]
WantedBy=multi-user.target

