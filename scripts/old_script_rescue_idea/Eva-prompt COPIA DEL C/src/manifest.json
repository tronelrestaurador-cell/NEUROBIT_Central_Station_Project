{
  "manifest_version": 3,
  "name": "Bitácora EVA",
  "version": "2.0",
  "description": "Registra mensajes e inyecta texto en ChatGPT, guardando la bitácora local.",
  "permissions": [
    "storage",
    "downloads",
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "*://chat.openai.com/*",
        "*://chatgpt.com/*"
      ],
      "js": ["content/content.js", "content/expansor.js"],
      "run_at": "document_idle"
    }
  ]
}
